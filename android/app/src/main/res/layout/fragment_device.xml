<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:layout_marginBottom="60dp"
    tools:context=".ui.dashboard.DashboardFragment">

    <TextView
        android:id="@+id/device_label"
        style="@style/Device_labels"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/deviceName_label"
        app:layout_constraintBaseline_toBaselineOf="@+id/device_name"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/device_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="140dp"
        android:text="device_name"
        style="@style/device_values"
        app:layout_constraintDimensionRatio=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/device_label"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/dev_separator1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/label_separator_margin"
        android:background="@android:color/darker_gray"
        app:layout_constraintTop_toBottomOf="@+id/device_label"
        tools:layout_editor_absoluteX="16dp" />

    <View
        android:id="@+id/dev_separator2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/label_separator_margin"
        android:background="@android:color/darker_gray"
        app:layout_constraintTop_toBottomOf="@+id/address_label"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/address_label"
        style="@style/Device_labels"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBaseline_toBaselineOf="@+id/device_address"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/device_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/label_separator_margin"
        android:text="FF:FF:FF:FF:FF:FF"
        style="@style/device_values"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dev_separator1" />

    <TextView
        android:id="@+id/isAuth_label"
        style="@style/Device_labels"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/isAuth_label"
        app:layout_constraintBaseline_toBaselineOf="@+id/device_isAuth"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/device_isAuth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/label_separator_margin"
        android:text="True"
        style="@style/device_values"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dev_separator2" />

    <View
        android:id="@+id/dev_separator3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/label_separator_margin"
        android:background="@android:color/darker_gray"
        app:layout_constraintTop_toBottomOf="@+id/isAuth_label"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/isTrusted_label"
        style="@style/Device_labels"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/isTrusted_label"
        app:layout_constraintBaseline_toBaselineOf="@+id/isTrusted_switch"
        app:layout_constraintStart_toStartOf="parent" />

    <Switch
        android:id="@+id/isTrusted_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:minWidth="48dp"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dev_separator3" />

    <Switch
        android:id="@+id/disconnect_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:height="40dp"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/disconnect_label"
        app:layout_constraintVertical_bias="0.222" />

    <View
        android:id="@+id/dev_separator4"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/label_separator_margin"
        android:background="@android:color/darker_gray"
        app:layout_constraintTop_toBottomOf="@+id/isTrusted_label"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/disconnect_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:text="@string/disconnect_label"
        android:textFontWeight="700"
        android:textSize="28sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dev_separator3"
        app:layout_constraintVertical_bias="0.858" />
</androidx.constraintlayout.widget.ConstraintLayout>